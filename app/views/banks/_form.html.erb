<%= form_with(model: bank, local: true) do |form| %>
    <% @bank.errors.full_messages do |error| %>
        <div>
            <%= error %>
        </div>
    <% end %>

    <div>
        <%= form.label :name, style: "display: block" %>
        <%= form.text_field :name %>
    </div>

    <div>
        <%= form.label :address, style: "display: block" %>
        <%= form.text_field :address %>
    </div>

    <div>
        <%= form.label :phone, style: "display: block" %>
        <%= form.text_field :phone %>
    </div>

    <div>
        <%= form.label :email, style: "display: block" %>
        <%= form.text_field :email %>
    </div>

    <div>
        <%= form.label :web_site, style: "display: block" %>
        <%= form.text_field :web_site %>
    </div>

    <div>
        <%= form.label :provider_nit, style: "display: block" %>
        <%= form.text_field :provider_nit %>
    </div>

    <div>
        <%= form.label :country_code, "Seleccionar pais" %>
        <%= form.collection_select :country_code, Country.all, :country_code, :country_name %>
    </div>

    <div>
        <%= form.label :department_code, "Seleccionar departamento" %>
        <%= form.collection_select :department_code, Department.all, :department_code, :department_name %>
    </div>

    <div>
        <%= form.label :city_code, "Seleccionar ciudad" %>
        <%= form.collection_select :city_code, City.all, :city_code, :city_name %>
    </div>

    <div>
        <%= form.label :type_account, style: "display: block" %>
        <%= form.text_field :type_account %>
    </div>

    <div>
        <%= form.label :aditional_information, style: "display: block" %>
        <%= form.text_field :aditional_information %>
    </div>

    <div>
        <%= form.submit %>
    </div>
<% end %>

